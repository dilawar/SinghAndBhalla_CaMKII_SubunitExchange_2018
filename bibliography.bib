	file = {ScienceDirect Full Text PDF:/home1/dilawars/Work/ZOTERO/storage/P6PE83AD/Branco and Häusser - 2011 - Synaptic Integration Gradients in Single Cortical .pdf:application/pdf;ScienceDirect Snapshot:/home1/dilawars/Work/ZOTERO/storage/Q4SGMNKG/S0896627311001036.html:text/html}
}

@article{miller_stability_2006,
