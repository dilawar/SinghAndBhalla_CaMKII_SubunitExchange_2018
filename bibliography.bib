	year = {2017},
	note = {00002},
	keywords = {Synapses, Biophysics, Mesoscopic physics, Monte Carlo method, Nanoparticles, Simulation and modeling, Skewness, Statistical distributions, synaptic size},
	pages = {e1005668}
}

@article{kaufman_long-term_2012,
	title = {Long-term {Relationships} between {Cholinergic} {Tone}, {Synchronous} {Bursting} and {Synaptic} {Remodeling}},
	volume = {7},
